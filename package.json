{
  "name": "node-services-boilerplate",
  "version": "0.6.0",
  "description": "node services boilerplate",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "tsc-watch": "tsc -w",
    "start": "pm2 startOrRestart ecosystem.config.js --env production",
    "dev": "pm2 startOrRestart ecosystem.dev.config.js && pm2 logs node-services-boilerplate --err --raw",
    "reload": "pm2 reload ecosystem.dev.config.js",
    "clear": "pm2 stop node-services-boilerplate && pm2 delete node-services-boilerplate",
    "build": "node ./build/index.js",
    "setup-pro": "pm2 deploy production setup",
    "publish-pro": "pm2 deploy production",
    "test": "jest",
    "preinstall": "npx npm-force-resolutions"
  },
  "keywords": [
    "node",
    "typescript",
    "koa",
    "boilerplate"
  ],
  "author": "blastz",
  "license": "ISC",
  "dependencies": {
    "@blastz/nico": "^0.7.1",
    "@blastz/nico-utility": "^0.1.1",
    "axios": "^0.19.2",
    "bcrypt": "^4.0.1",
    "debug": "^4.1.1",
    "ioredis": "^4.16.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.9",
    "shelljs": "^0.8.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/debug": "^4.1.5",
    "@types/ioredis": "^4.14.9",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/mongoose": "^5.7.11",
    "@types/shelljs": "^0.8.7",
    "@types/supertest": "^2.0.8",
    "@zeit/ncc": "^0.22.1",
    "jest": "^25.3.0",
    "minimist": "^1.2.5",
    "supertest": "^4.0.2",
    "typescript": "^3.8.3"
  },
  "resolutions": {
    "minimist": "^1.2.5"
  }
}
